<% var expertises = constants.expertises; %>

<section class="services-section section scrollspy" id="services">
    <div class="container center">
        <div class="row">
            <div class="col s12 right">
                <h2>سرویس‌ها</h2>
                <h3>چه کارهایی برای شما می‌توانیم انجام دهیم</h3>
            </div>
        </div>
        <% for(var i = 0; i < expertises.length; i++){ %>
            <% if (i > 0){ %>
              <% if ((i + 1) % 3 == 0){ %>
                  <div class="col s12 l4 right">
                      <!--i.icon-basic-target.blue-purple-gradient-->
                      <%- expertises[i].photo %>
                      <div class="service-title"><%= expertises[i].title %></div>
                      <div class="service-description">
                        <%= expertises[i].description %>
                      </div>
                  </div>
                </div>
                <% if ((i + 1) < expertises.length){ %>
                  <div class="row">
              <% } %>
              <% }else{ %>
                <div class="col s12 l4 big-margin-on-medium-and-down right">
                    <!--i.icon-basic-accelerator.blue-purple-gradient-->
                    <%- expertises[i].photo %>
                    <div class="service-title"><%= expertises[i].title %></div>
                    <div class="service-description">
                      <%= expertises[i].description %>
                    </div>
                </div>
              <% } %>
          <% }else{ %>
              <div class="row">
                <div class="col s12 l4 big-margin-on-medium-and-down right">
                    <!--i.icon-basic-heart.blue-purple-gradient-->
                    <%- expertises[i].photo %>
                    <div class="service-title"><%= expertises[i].title %></div>
                    <div class="service-description">
                      <%= expertises[i].description %>
                    </div>
                </div>
            <% } %>
        <% } %>
    </div>
</section>
