<!-- Main content-->
<main class="main bokeh-bg" id="main">
<section class="section scrollspy">
  <div class="container">
    <div class="row">
      <div id="edit-profile" class="col s11 m9 l8">
        <section class="section scrollspy">
          <% if (user.profile) { %>
            <% if (typeof user.isGem != 'undefined'){ %>
              <div class="peoples-photo profile-photo-bg large">
                <%- user.profile %>
              </div>
            <% }else{ %>
              <div class="peoples-photo profile-photo-bg large regular">
                <div class="profile-photo" style="background-image: url(<%= user.profile %>)"></div>
                <form enctype="multipart/form-data">
                  <input type="file" accept="image/jpeg" class="profile-uploader">
                </form>
              </div>
            <% } %>
          <% } else { %>
            <div class="peoples-photo profile-photo-bg large">
              <svg class="profile-photo no-image" enable-background="new 0 0 409.165 409.164" version="1.1" viewBox="0 0 409.165 409.164" xml:space="preserve" xmlns="http://www.w3.org/2000/svg">
              	<g fill="#5b0bbb">
              		<path d="m204.58 216.67c50.664 0 91.74-48.075 91.74-107.38 0-82.237-41.074-107.38-91.74-107.38-50.668 0-91.74 25.14-91.74 107.38 1e-3 59.303 41.073 107.38 91.74 107.38z"/>
              		<path d="m407.16 374.72l-46.284-104.26c-2.117-4.771-5.836-8.728-10.465-11.138l-71.83-37.392c-1.584-0.823-3.502-0.663-4.926 0.415-20.316 15.366-44.203 23.488-69.076 23.488-24.877 0-48.762-8.122-69.078-23.488-1.428-1.078-3.346-1.238-4.93-0.415l-71.825 37.392c-4.631 2.41-8.346 6.365-10.465 11.138l-46.284 104.26c-3.191 7.188-2.537 15.412 1.75 22.005 4.285 6.592 11.537 10.526 19.4 10.526h362.86c7.863 0 15.117-3.936 19.402-10.527 4.285-6.592 4.941-14.819 1.75-22.004z"/>
              	</g>
              </svg>
              <form enctype="multipart/form-data">
                <input type="file" accept="image/jpeg" class="profile-uploader">
              </form>
            </div>
          <% } %>

          <h2 class="center">ویرایش تصویر</h2>
          <div class="container">
            <div class="row">
              <div class="col s12 right">
                  <div class="input-field">
                    <% if (user.name) { %>
                      <input class="black-text" id="name" type="text" name="name" value="<%= user.name %>">
                    <% }else{ %>
                      <input class="black-text" id="name" type="text" name="name">
                    <% } %>
                    <label class="black-text" for="name">نام</label>
                  </div>
              </div>
              <div class="col s12 right">
                  <div class="input-field">
                    <input class="black-text" id="email" type="email" name="email" data-value="<%= user.email %>" value="<%= user.email %>">
                    <label class="black-text" for="email">پست الکترونیک</label>
                  </div>
              </div>
              <div class="col s12 passwd right direction-rtl">
                <a class="form-link passwd-link" href="/profile/change-password">تغییر گذرواژه&hellip;</a>
              </div>

              <div class="col s12 center">
                  <button class="btn btn-large btn-flat waves-effect blue-purple-gradient waves-dark white-text" data-id="<%= user._id %>" id="edit-profile-btn" type="submit">ذخیره تغییرات</button>
              </div>
            </div>
          </div>
        </section>
      </div>
    </div>
  </div>
</section>
</main>

<%- include('profile-hamburger-btn'); %>
