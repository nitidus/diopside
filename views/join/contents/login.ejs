<div id="login">
  <div class="main-col col s10 m7 l5">
    <div class="peoples-photo"></div>
    <h2 class="center">ورود به حساب کاربری</h2>
    <div class="container">
      <div class="row">
        <div class="col s12 right">
            <div class="input-field">
                <input class="black-text" id="email" type="email" name="email">
                <label class="black-text" for="email">پست الکترونیک</label>
            </div>
        </div>
        <div class="col s12 right">
            <div class="input-field">
                <input class="black-text" id="password" type="password" name="password">
                <label class="black-text" for="password">گذرواژه</label>
            </div>
        </div>
        <div class="col s12 remember right direction-rtl">
          <input type="checkbox" id="remember" checked="checked" />
          <label for="remember">من را به خاطر بسپار</label>
        </div>
        <div class="col s12 right direction-rtl">
          <a class="form-link reg-link" href="/forgotten">گذرواژه خود را فراموش کردید؟</a>
        </div>
        <div class="col s12 center right">
            <button class="btn btn-large btn-flat waves-effect blue-purple-gradient waves-dark white-text" id="login-btn" type="submit">ورود به حساب</button>
        </div>
        <div class="col s12 right">
          <a class="form-link center reg-link direction-rtl" href="/signup">ایجاد حساب کاربری <i class="fa fa-angle-left" aria-hidden="true"></i></a>
        </div>
      </div>
    </div>
  </div>
</div>
